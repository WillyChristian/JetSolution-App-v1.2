<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="JetSolutionsApp.Views.CombustivelView">
    <ContentPage.Content>
        <StackLayout>
            <StackLayout>
                <Image Source="logoJet4u.png"  WidthRequest="200"  HeightRequest="80" HorizontalOptions="Center" Margin="0,-15,0,15"/>
            </StackLayout>
            <StackLayout VerticalOptions="CenterAndExpand">

                <ListView  x:Name="ListaFornecedores" 
                           ItemsSource="{Binding Fornecedores}"
                            RowHeight="60"
                           HorizontalOptions="Center">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <ViewCell>
                                <StackLayout Orientation="Vertical"  HorizontalOptions="CenterAndExpand">
                                    <StackLayout Orientation="Horizontal"  >
                                        <Label 
                                               Text="{Binding Fornecedor}"                                          WidthRequest="80"
                                               FontSize="14"
                                               HorizontalOptions="End"
                                               VerticalOptions="End"/>
                                        <Label Text="Preço: R$ "
                                               FontSize="11"
                                               HorizontalOptions="End"
                                               VerticalOptions="End"
                                               />
                                        <Label Text="{Binding Preco}"
                                               FontSize="12"
                                               WidthRequest="40" 
                                               VerticalOptions="End"
                                               HorizontalOptions="Start"/>

                                        <Button x:Name="btn"
                                                FontSize="15"
                                                HeightRequest="38"
                                                WidthRequest="75"
                                                VerticalOptions="EndAndExpand"                             
                                                BackgroundColor="DarkBlue"
                                                BorderWidth="2"
                                                BorderColor="DarkGray"
                                                TextColor="White"
                                                Text="{Binding Distribuidor}"                                       Clicked="Button_Clicked"   />
                                    </StackLayout>
                                    <StackLayout>
                                        <Label x:Name="DistribuidorLbl"  
                                               Text="{Binding Distribuidor}"
                                               FontSize="11"                                              
                                               VerticalOptions="Start"
                                               HorizontalOptions="FillAndExpand"
                                               />
                                    </StackLayout>
                                </StackLayout>
                            </ViewCell>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>